{
    "name": "arctictern.is",
    "version": "1.0.0",
    "description": "https://arctictern.is/ webbplats",
    "main": "index.js",
    "scripts": {
        "start": "nodemon --exec \"ts-node -r tsconfig-paths/register\" src/server.ts",
        "tw": "npx @tailwindcss/cli -i ./static/css/tw.css -o ./static/css/tw.min.css --watch",
        "dev": "concurrently \"npm:start\" \"npm:tw\"",
        "build": "tsc && copyfiles \"views/**/*\" \"static/**/*\" \"webroot/**/*\" \".build\" && git rev-parse HEAD > .build/GIT_HASH",
        "serve": "TS_NODE_BASEURL=./.build node -r tsconfig-paths/register .build/server.js",
        "serve-nt": "set TS_NODE_BASEURL=./.build && node -r tsconfig-paths/register .build/server.js"
    },
    "keywords": [],
    "author": "Kría Elínarbur <kria.elinarbur@arctictern.is>",
    "license": "UNLICENSED",
    "packageManager": "pnpm@10.10.0",
    "dependencies": {
        "@tailwindcss/cli": "^4.1.13",
        "concurrently": "^9.2.1",
        "ejs": "^3.1.10",
        "express": "^5.1.0",
        "express-rate-limit": "^8.2.1",
        "tailwindcss": "^4.1.13"
    },
    "devDependencies": {
        "@types/express": "^5.0.3",
        "@types/node": "^24.5.2",
        "copyfiles": "^2.4.1",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "prettier-plugin-ejs": "^1.0.3",
        "prettier-plugin-organize-imports": "^4.3.0",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.2"
    }
}
